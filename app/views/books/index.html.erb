<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。error</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
<%= render 'users/profile',user: @user,book: @book %>
<div class="col-sm-9">
<table class="table table-hover table-inverse">
		<thead>
		<tr>
			<th></th><th>Title</th><th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %></td>
				<td><%= link_to book.title, book_path(book) %></td>
				<td><%= book.body %></td>
			</tr>
 		<% end %>
 	</tbody>
</table>
</div>
</div>


