<p id="notice">Welcome! You have signed up successfully.</p>

  <div class="col-sm-3">

<h1>User info</h1>
<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<h2>Name</h2>
<p><%= user.name %></p>

<h2>introduction</h2>
<p><%= user.introduction %></p>
<div class="btn btn-default">
<p><%=link_to"",edit_user_path(user) ,:class => "glyphicon glyphicon-wrench"%></p>
</div>


<h2>New book</h2>

<%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
 <!-- 編集部分 -->
<%= f.submit 'create book',class:"btn btn-primary" %>

<% end %>
</div>


