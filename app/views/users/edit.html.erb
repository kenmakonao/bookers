<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーが発生しました。error</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <!-- 編集部分 -->

<h1>User info</h1>
<%= form_for(@user) do |f| %>

<h2>Name</h2>
<%= f.text_field :name %>

<h2>Image</h2>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

<h2>Introduction</h2>
<%= f.text_field :introduction %>
<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>




